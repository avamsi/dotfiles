{
  "permissions": {
    "allow": [
      "Bash(cargo test:*)",
      "Bash(go test:*)",
      "Bash(jj:*)",
      "Bash(uv run pytest:*)",
      "Edit",
      "MultiEdit",
      "NotebookEdit",
      "WebFetch",
      "WebSearch",
      "Write",
      "mcp__chrome-devtools"
    ],
    "defaultMode": "plan"
  },
  "model": "opus[1m]",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "say -v Bells Done!"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true
  },
  "alwaysThinkingEnabled": true,
  "fastMode": true
}
